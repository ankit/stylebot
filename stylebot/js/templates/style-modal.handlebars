<div class="modal-content">
  <div class="modal-header">
    {{#if editor}}
        {{#if global}}
            Edit the Global Stylesheet:
        {{else}}
            <label for="url">URL:</label><input name="url" type='text' value="{{url}}"></input><input name="regex" class="toggle-regex" type="checkbox" title="Treat as regular expression" {{#if regex}}checked{{/if}} />
        {{/if}}
    {{else}}
        {{#if export}}
            Copy and paste the following into a text file:
        {{else}}
            Paste previously exported styles: <br>
            <span class='note'>Note</span>: Existing styles for similar URLs will be overwritten.
        {{/if}}
    {{/if}}
  </div>

  {{#if editor}}
    <div id="editor"></div>
  {{else}}
    <textarea class="stylebot-css-code">{{code}}</textarea>
  {{/if}}

  <div class="modal-footer">
    {{#if editor}}
        {{#if add}}
            <button class="add-style">Add</button>
        {{else}}
            <button {{#if global}}class="edit-global"{{else}}data-original-url="{{url}}" class="edit-style"{{/if}}>Save</button>
        {{/if}}
    {{else}}
        {{#if export}}
            <button class="copy-to-clipboard">Copy to Clipboard</button>
        {{else}}
            <button class="import">Import</button>
        {{/if}}
    {{/if}}
    <button class="cancel">Cancel</button>
  </div>
</div>
